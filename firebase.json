{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "public/**/*.@(jpg|ico|js|css)",
        "key": "Cache-Control",
        "value": "max-age=86400"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "host": "0.0.0.0",
      "port": 5000
    }
  }
}
